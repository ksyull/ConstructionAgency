<Window x:Class="ConstructionAgency.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="360" Width="420" WindowStartupLocation="CenterOwner">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Имя пользователя"/>
        <TextBox   Grid.Row="1" x:Name="UserNameBox" Margin="0,6,0,12"/>

        <TextBlock Grid.Row="2" Text="Email"/>
        <TextBox   Grid.Row="3" x:Name="EmailBox" Margin="0,6,0,12"/>

        <TextBlock   Grid.Row="4" Text="Пароль"/>
        <PasswordBox Grid.Row="5" x:Name="PwdBox" Margin="0,6,0,12"/>

        <TextBlock   Grid.Row="6" Text="Повторите пароль"/>
        <PasswordBox Grid.Row="7" x:Name="ConfirmBox" Margin="0,6,0,12"/>

        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Зарегистрировать" Width="140" Click="Register_Click" Margin="0,0,8,0"/>
            <Button Content="Отмена" Width="90" Click="Cancel_Click"/>
        </StackPanel>

        <TextBlock Grid.Row="9" x:Name="ErrorText" Foreground="Crimson" TextWrapping="Wrap"/>
    </Grid>
</Window>